{
  "name": "schoedel-learn/log-changes",
  "description": "WordPress plugin for tracking all changes to your site with detailed audit trails",
  "type": "wordpress-plugin",
  "license": "MIT",
  "authors": [
    {
      "name": "Barry Schoedel",
      "email": "barry@schoedel.design"
    }
  ],
  "keywords": [
    "wordpress",
    "plugin",
    "audit",
    "logging",
    "change-tracking",
    "activity-log"
  ],
  "require": {
    "php": ">=7.2"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
  },
  "scripts": {
    "phpcs": "phpcs",
    "phpcbf": "phpcbf",
    "lint": "phpcs --standard=phpcs.xml",
    "lint:fix": "phpcbf --standard=phpcs.xml",
    "test": "phpcs --standard=phpcs.xml"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
