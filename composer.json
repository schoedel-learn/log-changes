{
    "name": "schoedel-learn/log-changes",
    "description": "A comprehensive WordPress plugin for tracking all changes to your site",
    "type": "wordpress-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Barry Schoedel",
            "email": "contact@schoedel.design",
            "homepage": "https://schoedel.design"
        }
    ],
    "keywords": [
        "wordpress",
        "plugin",
        "audit",
        "logging",
        "tracking",
        "change-log",
        "security",
        "compliance"
    ],
    "homepage": "https://github.com/schoedel-learn/log-changes",
    "support": {
        "issues": "https://github.com/schoedel-learn/log-changes/issues",
        "source": "https://github.com/schoedel-learn/log-changes",
        "docs": "https://github.com/schoedel-learn/log-changes#readme"
    },
    "require": {
        "php": ">=7.2"
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "lint": "phpcs --standard=WordPress --report=summary --extensions=php .",
        "lint-fix": "phpcbf --standard=WordPress --extensions=php .",
        "check-compat": "phpcs --standard=PHPCompatibility --runtime-set testVersion 7.2- ."
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
