<?xml version="1.0"?>
<ruleset name="Log Changes WordPress Coding Standards">
    <description>WordPress Coding Standards for Log Changes Plugin</description>

    <!-- Check all PHP files in directory tree by default. -->
    <arg name="extensions" value="php"/>
    <file>.</file>

    <!-- Show progress and sniff codes in all reports -->
    <arg value="ps"/>

    <!-- Check up to 8 files simultaneously. -->
    <arg name="parallel" value="8"/>

    <!-- Whenever possible, cache the scan results and re-use those for unchanged files on the next scan. -->
    <arg name="cache"/>

    <!-- Set a minimum supported WordPress version -->
    <config name="minimum_supported_wp_version" value="5.0"/>

    <!-- Use WordPress Coding Standards -->
    <rule ref="WordPress">
        <!-- Allow short array syntax -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
        
        <!-- Allow function name flexibility for WordPress hooks -->
        <exclude name="WordPress.NamingConventions.ValidFunctionName.FunctionNameInvalid"/>
    </rule>

    <!-- Use WordPress-Extra set for best practices -->
    <rule ref="WordPress-Extra">
        <!-- Allow same array syntax exclusion -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
    </rule>

    <!-- Use WordPress-Docs for documentation standards -->
    <rule ref="WordPress-Docs"/>

    <!-- Verify that all gettext calls use the correct text domain -->
    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="log-changes"/>
            </property>
        </properties>
    </rule>

    <!-- Check for PHP cross-version compatibility -->
    <config name="testVersion" value="7.2-"/>
    <rule ref="PHPCompatibility"/>

    <!-- Exclude vendor and node_modules directories -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/build/*</exclude-pattern>
    <exclude-pattern>*/dist/*</exclude-pattern>

    <!-- Allow WordPress VIP minimum -->
    <rule ref="WordPress-VIP-Go"/>

    <!-- Security Rules -->
    <rule ref="WordPress.Security">
        <!-- All security rules included by default -->
    </rule>

    <!-- Database Rules -->
    <rule ref="WordPress.DB">
        <!-- Ensure proper database queries -->
    </rule>

    <!-- Additional Rules -->
    <rule ref="WordPress.WP.EnqueuedResources"/>
    <rule ref="WordPress.WP.GlobalVariablesOverride"/>
    <rule ref="WordPress.WP.PostsPerPage"/>
    <rule ref="WordPress.WP.TimezoneChange"/>

    <!-- Enforce line length for readability (soft limit) -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="150"/>
        </properties>
    </rule>

    <!-- Enforce proper file structure -->
    <rule ref="PSR2.Files.ClosingTag"/>

    <!-- Check for conflicting content names -->
    <rule ref="WordPress.NamingConventions.PrefixAllGlobals">
        <properties>
            <property name="prefixes" type="array">
                <element value="log_changes"/>
                <element value="Log_Changes"/>
                <element value="LOG_CHANGES"/>
            </property>
        </properties>
    </rule>

</ruleset>
